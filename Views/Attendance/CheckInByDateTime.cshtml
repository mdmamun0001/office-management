@model CheckInByDateTimeCreateViewModel
@{
    ViewData["Title"] = "CheckIn";
}
<div class="row justify-content-center">
    <div class="col-12 col-xl-8">
       
        <div class="card card-body border-0 shadow mb-4">
            <h2 class="h5 mb-4"> CheckIn For User</h2>
            <form method="post" enctype="multipart/form-data" asp-controller="Attendance" asp-action="CheckInByDateTime">
              
               
              
               
                <div class="row align-items-center">

                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="first_name">User Email <small class="text-danger">*</small> </label>
                            <input class="form-control" asp-for="UserEmail" placeholder="Enter user Email ">
                            <span class="text-danger" asp-validation-for="UserEmail"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="birthday">CheckInTime <small class="text-danger">*</small></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <svg class="icon icon-xs" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
                            </span>
                            <input class="form-control" asp-for="CheckInTime">
                            <span class="text-danger" asp-validation-for="CheckInTime"></span>
                        </div>
                    </div>
                </div>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mt-3">
                    <div class="mt-3">
                        <a class="btn btn-pill btn-secondary mt-2 animate-up-2 " style="float:left;" asp-controller="Attendance" asp-action="CheckOutBytDateTime">CheckOut Managemnt</a>
                        <button class="btn btn-pill btn-secondary mt-2 animate-up-2 " style="float:right;" type="submit">Save</button>
                </div>
            </form>
        </div>

    </div>

</div>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    }