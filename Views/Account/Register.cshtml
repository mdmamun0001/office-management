@model UserCreateViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="row justify-content-center">
    <div class="col-12 col-xl-8">
       
    <div class="card card-body border-0 shadow mb-4">
            <h2 class="h5 mb-4">General information For New Account</h2>
            <form method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Register">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="first_name">Full Name <small class="text-danger">*</small> </label>
                            <input class="form-control" asp-for="Name" type="text" placeholder="Enter Full name"> 
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="last_name">Job Position <small class="text-danger">*</small></label>
                            <input class="form-control" asp-for="JobTitle" type="text" placeholder="Enter Job Position">
                            <span class="text-danger" asp-validation-for="JobTitle"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="email">Email <small class="text-danger">*</small></label>
                            <input class="form-control" asp-for="Email" type="email" placeholder="name@company.com">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="phone">Phone <small class="text-danger">*</small></label>
                            <input class="form-control" asp-for="PhoneNumber" type="number" placeholder="01778770533">
                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="first_name">Id Card Number <small class="text-danger">*</small> </label>
                            <input class="form-control" asp-for="IdCardNumber" type="number" placeholder="Enter Id Card Number">
                            <span class="text-danger" asp-validation-for="IdCardNumber"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="last_name">Blood Group </label>
                            <input class="form-control" asp-for="BloodGroup" type="text" placeholder="Enter Blood Group">
                            <span class="text-danger" asp-validation-for="BloodGroup"></span>
                        </div>
                    </div>
                   
                </div>
                <div class="row align-items-center">
                    <div class="col-md-6 mb-3">
                        <label for="birthday">Birthday</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <svg class="icon icon-xs" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
                            </span>
                            <input  class="form-control" asp-for="BirthDay" type="date" placeholder="mm/dd/yyyy">
                            <span class="text-danger" asp-validation-for="BirthDay"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="gender">Gender <small class="text-danger">*</small></label>
                        <select class="form-select mb-0" asp-for="Gender" aria-label="Gender select example">
                            <option selected value="">Gender</option>
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Gender"></span>
                    </div>
                </div>

                <h2 class="h5 my-4">Address <small>(optional) </small></h2>
                <div class="row">
                    <div class="col-12 mb-3">
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Address">
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>
                    </div>
                </div>
                <h2 class="h5 my-4">Images <small>(optional) </small></h2>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group">
                            <label for="ProfileImage">Profile Image</label>
                            <input asp-for="ProfileImage" class="form-control" placeholder="Upload your Profile Image">
                            <span class="text-danger" asp-validation-for="ProfileImage"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group">
                            <label for="CoverImage">Cover Image</label>
                            <input asp-for="CoverImage" class="form-control" placeholder="Upload your Cover Image">
                            <span class="text-danger" asp-validation-for="CoverImage"></span>
                        </div>
                    </div>
                </div>
                <h2 class="h5 my-4">Password</h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label for="password"> Password <small class="text-danger">*</small></label>
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon2">
                                    <svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path></svg>
                                </span>
                                <input type="password" placeholder="Password" asp-for="Password" class="form-control" id="password">

                            </div>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label for="password">Confirm Password <small class="text-danger">*</small> </label>
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon2">
                                    <svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path></svg>
                                </span>
                                <input type="password" placeholder="Password" asp-for="ConfirmPassword" class="form-control" id="password">

                            </div>
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mt-3">
                    <a class="btn btn-pill btn-secondary mt-2 animate-up-2 " asp-controller="Account" asp-action="Index" style="float:left;">All Users</a>
                    <button class="btn btn-pill btn-secondary mt-2 animate-up-2 " style="float:right;" type="submit">Create New Account</button>
                </div>
            </form>
        </div>
       
    </div>
</div>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    }