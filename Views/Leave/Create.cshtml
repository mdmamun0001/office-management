@model LeaveCreateViewModel
@{
    ViewData["Title"] = "Add Leave";
}
<div class="row justify-content-center">
    <div class="col-12 col-xl-8">
       
        <div class="card card-body border-0 shadow mb-4">
            <h2 class="h5 mb-4">Add New Leave To User</h2>
            <form method="post" enctype="multipart/form-data" asp-controller="Leave" asp-action="Create">

                <div class="row align-items-center">
                    <div class="col-md-6 mb-3">
                        <label for="birthday">Leave Date <small class="text-danger">*</small></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <svg class="icon icon-xs" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
                            </span>
                            <input class="form-control" asp-for="LeaveDate">
                            <span class="text-danger" asp-validation-for="LeaveDate"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="">Users <small class="text-danger">*</small></label>
                        <select class="form-select mb-0" asp-for="UserId" aria-label="Gender select example">
                            <option selected value="">Select A User</option>
                              @{
                                foreach (var item in ViewBag.AllUsers)
                                {
                                    <option value="@item.Id">@item.Email</option>
                                 }
                              }
                        </select>
                        <span class="text-danger" asp-validation-for="UserId"></span>
                    </div>
                </div>

                <div class="row align-items-center">

                    <div class="col-md-6 mb-3">
                        <label for="gender">Reason</label>

                        <textarea class="form-control" asp-for="Reason" placeholder="Enter Holiday Name "> </textarea>
                        <span class="text-danger" asp-validation-for="Reason"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="">Type <small>Paid/ Un Paid</small></label>
                        <div class="input-group">
                            <select class="form-select mb-0" asp-for="Type" aria-label="Gender select example">
                                <option selected value="">Select One </option>
                                <option value="Paid">Paid</option>
                                <option value="Unpaind">Unpaind</option>
                            </select>
                            <span class="text-danger" asp-validation-for="Type"></span>
                        </div>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mt-3">
                    <button class="btn btn-pill btn-secondary mt-2 animate-up-2 " style="float:right;" type="submit">Save</button>
                </div>
            </form>
        </div>

    </div>

</div>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    }